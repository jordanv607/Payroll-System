@model IEnumerable<FrontEnd.Models.TipoDeducionViewModel>

@{
    ViewBag.Title = "Index";
}
<h2>Mantenimiento Tipo de Deducción</h2>
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreDeduccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.porcentaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreDeduccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.porcentaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idDeduccion }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.idDeduccion }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idDeduccion })
            </td>
        </tr>
    }

</table>
@if (TempData["mensaje"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["mensaje"]")
        };
    </script>
}